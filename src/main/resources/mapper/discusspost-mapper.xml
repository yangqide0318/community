<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cheetah.community.dao.DiscussPostMapper">
    <!--discussPost的dao层，就是基础的增删改查但是里面涉及两个小的算知识点吧
    1）我们的selectDiscussPosts方法的查询代码应该去仔细推敲，
    它涉及带动态SQL，并且实现了通过userId查询和全查询的复用
    2）<sql>便签实现了SQL语句的复用
    -->
    <sql id="insertFields">
        user_id,title,content,type,status,create_time,comment_count,score
    </sql>
    <sql id="selectFields">
        id,user_id,title,content,type,status,create_time,comment_count,score
    </sql>

    <select id="selectDiscussPosts" resultType="DiscussPost">
        select <include refid="selectFields"></include> from discuss_post where status !=2
        <if test="userId!=0">
            and user_id=#{userId}
        </if>
        <if test="orderMode==0">
            order by type desc,create_time desc
        </if>
        <if test="orderMode==1">
            order by type desc,score desc,create_time desc
        </if>
        limit #{offset},#{limit}
    </select>

    <select id="selectDiscussPostRows" resultType="int">
        select count(id) from discuss_post where status !=2
        <if test="userId!=0">
            and user_id=#{userId}
        </if>
    </select>
    <!--int insertDiscussPost(DiscussPost discussPost);-->
    <insert id="insertDiscussPost" parameterType="DiscussPost" keyProperty="id">
        insert  into discuss_post(<include refid="insertFields"></include>)
        values(#{userId},#{title},#{content},#{type},#{status},#{createTime},#{commentCount},#{score})
    </insert>
    <select id="selectDiscussPostById" resultType="DiscussPost">
        select <include refid="selectFields"></include> from discuss_post where id=#{id}
    </select>
    <!--int updateCommentCount(int id,int commentCount);-->
    <update id="updateCommentCount">
        update discuss_post set comment_count=#{commentCount} where id=#{id}
    </update>
    <!--int updateType(int id, int type);-->
    <update id="updateType">
        update discuss_post set type=#{type} where id=#{id}
    </update>
    <!--int updateStatus(int id, int status);-->
    <update id="updateStatus">
        update discuss_post set status=#{status} where id=#{id}
    </update>
    <!--int updateScore(int id, double score);-->
    <update id="updateScore">
        update discuss_post set score=#{score} where id=#{id}
    </update>
</mapper>
